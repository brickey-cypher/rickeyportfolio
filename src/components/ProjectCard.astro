---
import FadeInSection from '../components/FadeInSection';
import CustomButton from '../components/CustomButton';
export interface Props {
  title: string;
  description: string;
  pdf: string;
}

const { title, description, pdf } = Astro.props;
---

<FadeInSection client:visible>
  <article class="bg-neutral-900 p-6 rounded-2xl shadow-md flex flex-col gap-4">
    <h3 class="text-xl font-semibold text-white">{title}</h3>
    <p class="text-neutral-400">{description}</p>

    <!-- Use the full pdf path directly -->
    <a
      href={pdf}
      target="_self"
      class="mt-auto inline-block text-sm text-rose-500 hover:underline"
    >
      View Details
    </a>

    <!-- Back Button -->
    <CustomButton onClick={() => window.history.back()} className="mt-4 bg-rose-500 text-white px-4 py-2 rounded-md hover:bg-rose-600">
      Back
    </CustomButton>
  </article>
</FadeInSection>
