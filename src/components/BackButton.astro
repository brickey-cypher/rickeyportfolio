---
const { href, label = 'Go Back' } = Astro.props
---

<a
  href={href}
  class="inline-flex items-center text-sm text-blue-600 hover:underline hover:text-blue-800 transition duration-150"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-4 w-4 mr-1"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"
    ></path>
  </svg>
  {label}
</a>
