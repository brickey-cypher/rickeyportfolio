---
// Props
const {
  backgroundImage,
  opacity = 0.5, // Default semi-transparent overlay
  textOutline = true,
} = Astro.props

const tailwindOpacity = Math.round(opacity * 100) // Converts 0.5 to 50
---

<section
  class="relative bg-cover bg-center text-white py-16 px-4"
  style={`background-image: url(${backgroundImage})`}
>
  <!-- Responsive and controlled overlay -->
  <div class={`absolute inset-0 bg-black/${tailwindOpacity}`} aria-hidden="true"></div>

  <!-- Content with optional text outline -->
  <div class={`relative z-10 max-w-4xl mx-auto ${textOutline ? 'text-outline' : ''}`}>
    <slot />
  </div>
</section>

<style>
  .text-outline {
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
  }
</style>
