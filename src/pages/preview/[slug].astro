---
// Update the path below if BackButton.astro is in a different folder
// Update the path below if BackButton.astro is in a different folder
import BackButton from '../../components/BackButton.astro'
export async function getStaticPaths() {
  const slugs = [
    'tailwind.config',
    'postcss.config',
    'global',
    'astro.config',
    'Layout',
    'netlify',
    'about',
    'BackgroundSection',
    'index',
    'Projects',
    'ProjectCard',
    'behind-the-scenes',
  ]

  return slugs.map((slug) => ({
    params: { slug },
  }))
}

const { slug } = Astro.params
const imagePath = `/svgs/${slug}.svg`

// Set where the back button should lead. Adjust as needed.
const backHref = '/behind-the-scenes'
---

<main class="p-6">
  <BackButton href={backHref} label="Back to Behind the Scenes" />

  <div class="mt-6">
    <img src={imagePath} alt={`${slug} svg`} class="max-w-full h-auto" />
  </div>
</main>
