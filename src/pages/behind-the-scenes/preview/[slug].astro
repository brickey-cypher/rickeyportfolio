// All filenames without `.svg` extension from /public/svgs
export async function getStaticPaths() {
  const slugs = [
    'tailwind.config',
    'postcss.config',
    'global',
    'astro.config',
    'Layout',
    'netlify',
    'about',
    'BackgroundSection',
    'index',
    'Projects',
    'ProjectCard',
    'behind-the-scenes',
  ]

  return slugs.map((slug) => ({
    params: { slug },
  }))
}

const { slug } = Astro.params
const imagePath = `/svgs/${slug}.svg`
