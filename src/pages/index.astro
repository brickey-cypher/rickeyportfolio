---
import Layout from '../layouts/Layout.astro'
import BehindTheScenes from '../components/BehindTheScenes.astro'
import BackgroundSection from '../components/BackgroundSection.astro'
---

<Layout title="Home | Brianna Marie Rickey">
  <p class="text-center text-xs text-gray-300 bg-gray-800 p-2 rounded mb-4 sm:hidden">
    For the best experience, switch to desktop view in your mobile browser.
  </p>

  <main>
    <BackgroundSection backgroundImage="/backgrounds/tech-grid.svg" opacity={0.1}>
      <section class="max-w-3xl mx-auto py-12 px-6 text-center bg-black bg-opacity-20 rounded-lg">
        <h1 class="text-4xl font-bold mb-4 text-white">Welcome to My Cybersecurity Portfolio</h1>
        <p class="text-lg text-gray-100">
          Hi, I'm Brianna—an aspiring cybersecurity specialist focused on social engineering, threat
          analysis, and digital defense.
        </p>
        <p class="mt-6 text-md text-gray-200">
          Explore my <a href="/projects" class="underline text-blue-400 hover:text-blue-600"
            >projects</a
          >
          to see how I’m building my skillset and securing the digital world.
        </p>
        <div class="mt-8">
          <a
            href="/about"
            class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition"
          >
            About Me
          </a>
        </div>
      </section>
    </BackgroundSection>
  </main>
</Layout>
